<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Toy Store Shop</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        .top-bar {
            background: #fff;
            height: 60px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.15);
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .site-title {
            font-size: 20px;
            font-weight: bold;
            margin-left: 10px;
        }

        .menu {
            background: #d9534f;
            padding: 8px 0;
        }

            .menu a {
                color: white;
                padding: 10px 18px;
                text-decoration: none;
                font-size: 14px;
            }

                .menu a:hover {
                    background: #c9302c;
                }

        .carousel-item img {
            width: 100%;
            height: 350px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <!-- TOP BAR -->
    <div class="top-bar">
        <img src="~/images/logo.png" width="40" />
        <span class="site-title">TOY STORE SHOP</span>

        <form class="ms-auto d-flex" style="max-width: 350px;">
            <input class="form-control" type="search" placeholder="Tìm kiếm sản phẩm..." />
            <button class="btn btn-outline-secondary ms-1">🔍</button>
        </form>

        <a href="#" class="ms-3">Đăng nhập</a>
    </div>

    <!-- MENU -->
    <div class="menu text-center">
        <a asp-controller="Home" asp-action="Index">TRANG CHỦ</a>
        <a href="#">HÀNG MỚI</a>
        <a href="#">THƯƠNG HIỆU</a>
        <a href="#">SẢN PHẨM</a>
        <a href="#">KHUYẾN MẠI</a>
        <a href="#">LIÊN HỆ</a>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
